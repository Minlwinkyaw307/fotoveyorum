{% extends 'admin/admin/base.html.twig' %}
{% block title %} {{ title }}{% endblock %}
{% block body %}
<h1>Post Report index</h1>
<div class="x_content">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reported By</th>
                <th>Reported At</th>
                <th>Status</th>
                <th>Delete</th>
                <th>Delete Post</th>
                <th>Show</th>
            </tr>
        </thead>
        <tbody>
        {% for post_report in post_reports %}
            <tr>
                <td>{{ post_report.id }}</td>
                <td>{{ post_report.reportedBy.username }}</td>
                <td>{{ post_report.createdAt ? post_report.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post_report.status }}</td>
                <td>
                    {% include('admin/post_report/_delete_form.html.twig') %}
                </td>
                <td>
                    {% set post = post_report.post %}
{#                    <a class="btn btn-sm btn-danger" href="#">Delete Post</a>#}
                    {% include('admin/post/_delete_form.html.twig') %}

                </td>
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('post_report_show', {'id': post_report.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
