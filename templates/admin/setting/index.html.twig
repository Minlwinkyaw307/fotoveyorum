{% extends 'admin/admin/base.html.twig' %}
{% block title %} {{ title }}{% endblock %}
{% block body %}
<h1>Settings</h1>
<hr>
<div class="x_content">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Keywords</th>
                <th>Description</th>
                <th>Company</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Fax</th>
                <th>Email</th>
                <th>Smtpserver</th>
                <th>Smtpemail</th>
                <th>Smtppassword</th>
                <th>Smtpport</th>
                <th>Facebook</th>
                <th>Instagram</th>
                <th>Twitter</th>
                <th>Aboutus</th>
                <th>Contact</th>
                <th>Referns</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for setting in settings %}
            <tr>
                <td>{{ setting.id }}</td>
                <td>{{ setting.title }}</td>
                <td>{{ setting.keywords }}</td>
                <td>{{ setting.description }}</td>
                <td>{{ setting.company }}</td>
                <td>{{ setting.phone }}</td>
                <td>{{ setting.address }}</td>
                <td>{{ setting.fax }}</td>
                <td>{{ setting.email }}</td>
                <td>{{ setting.smtpserver }}</td>
                <td>{{ setting.smtpemail }}</td>
                <td>{{ setting.smtppassword }}</td>
                <td>{{ setting.smtpport }}</td>
                <td>{{ setting.facebook }}</td>
                <td>{{ setting.instagram }}</td>
                <td>{{ setting.twitter }}</td>
                <td>{{ setting.aboutus }}</td>
                <td>{{ setting.contact }}</td>
                <td>{{ setting.referns }}</td>
                <td>{{ setting.status }}</td>
                <td>
                    <a href="{{ path('setting_show', {'id': setting.id}) }}">show</a>
                    <a href="{{ path('setting_edit', {'id': setting.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="21">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('setting_new') }}">Create new</a>
</div>
{% endblock %}
