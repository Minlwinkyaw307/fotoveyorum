<form name="category" method="post" enctype="multipart/form-data">
    <div id="category">
        <div class="form-group">
            <label class="" for="category_parentid">Parentid</label>
            <select id="category_parentid" name="category[parentid]" class="form-control">
                <option value="0">Main Category</option>
                {% for rs in categories %}
                    <option value="{{ rs.id }}" {{ category ? (category.parentid == rs.id ? "selected" : "") : ""  }}>{{ rs.title }}</option>
                {% endfor %}
            </select></div>
        <div class="form-group">
            <label for="category_title">Title</label>
            <input type="text" value="{{ category.title }}" id="category_title" name="category[title]" maxlength="255" class="form-control"/>
        </div>
        <div class="form-group">
            <label for="category_keywords">Keywords</label>
            <textarea id="category_keywords" name="category[keywords]" class="form-control">{{ category.keywords }}</textarea>
        </div>
        <div class="form-group">
            <label for="category_description">Description</label>
            <textarea id="category_description" name="category[description]" class="form-control">{{ category.description }}</textarea>
        </div>
        <div class="form-group">
            <label for="category_image">Image</label>
            <input type="file" value="{{ category.image }}" id="category_image" name="category[image]" class="form-control-file"/></div>
        <div class="form-group">
            <div class="form-check"><input type="checkbox"  id="category_status" name="category[status]"
                                           class="form-check-input" value="{{ category.status }}"/>
            <label class="form-check-label" for="category_status">Status</label></div>
        </div>
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
    </div>
</form>