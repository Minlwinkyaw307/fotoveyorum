{% extends('home/home/base.html.twig') %}
{% block keywords %} {{post.keywords}} {% endblock %}
{% block description %} {{post.description}} {% endblock %}
{% block title %} {% endblock %}
{% block body %}
<div class="col-md-6 main">
    <div class="">
        {% include('home/User/nav.html.twig') %}
        <div class="sign-up-form">
            <h3>{{ post.title }}</h3>
            <hr>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ post.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ post.title }}</td>
        </tr>
        <tr>
            <th>Keywords</th>
            <td>{{ post.keywords }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ post.description }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ post.status ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Updated At</th>
            <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('post_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    </div>
    </div>

    <div class="clearfix"> </div>
{% endblock %}
