{% extends('home/home/base.html.twig') %}
{% block keywords %} {{post.keywords}} {% endblock %}
{% block description %} {{post.description}} {% endblock %}
{% block title %} {% endblock %}
{% block body %}
<div class="col-md-6 main">
    <div class="">
        {% include('home/User/nav.html.twig') %}
        <div class="sign-up-form">
            <h3>Edit {{ post.title }}</h3>
            <hr>
        {{ include('admin/post/_form.html.twig', {'button_label': 'Update'}) }}
        <hr>
        <a href="{{ path('home_userpost_index') }}" class="btn btn-info">back to list</a>

        <form method="post" action="{{ path('home_userpost_delete', {'id': post.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
            <button class="btn btn-sm btn-danger">Delete</button>
        </form>
    </div>
    </div>
</div>

    <div class="clearfix"> </div>
{% endblock %}
